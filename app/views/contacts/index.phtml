    <tbody>
        <?php $hasResults = false; ?>

        <?php foreach ($paginator->registers() as $contact) : ?>
            <?php $hasResults = true; ?>
            <tr>
                <td><?= htmlspecialchars($contact->id) ?></td>
                <td><?= htmlspecialchars($contact->name) ?></td>
                <td><?= htmlspecialchars($contact->phone) ?></td>
                <td>
