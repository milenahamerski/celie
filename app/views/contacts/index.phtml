<nav aria-label="Navegação de páginas">
    <ul class="pagination justify-content-end">

        <?php if ($paginator->hasPreviousPage()) : ?>
            <li class="page-item">
                <a class="page-link" href="<?= route($paginator->getRouteName(), ['page' => $paginator->previousPage()]) ?>">Anterior</a>
            </li>
        <?php else : ?>
            <li class="page-item disabled">
                <span class="page-link">Anterior</span>
            </li>
        <?php endif; ?>

        <?php for ($page = 1; $page <= $paginator->totalOfPages(); $page++) : ?>
            <li class="page-item <?= $paginator->isPage($page) ? 'active' : '' ?>">
                <a class="page-link" href="<?= route($paginator->getRouteName(), ['page' => $page]) ?>"><?= $page ?></a>
            </li>
        <?php endfor; ?>

        <?php if ($paginator->hasNextPage()) : ?>
            <li class="page-item">
                <a class="page-link" href="<?= route($paginator->getRouteName(), ['page' => $paginator->nextPage()]) ?>">Próxima</a>
            </li>
        <?php else : ?>
            <li class="page-item disabled">
                <span class="page-link">Próxima</span>
            </li>
        <?php endif; ?>
    </ul>
</nav>

